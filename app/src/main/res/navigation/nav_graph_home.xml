<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/tab_profiles">

    <fragment
        android:id="@+id/tab_profiles"
        android:name="com.petapp.capybara.profiles.ProfilesFragment"
        android:label="profiles"
        tools:layout="@layout/fragment_profiles">
        <action
            android:id="@+id/to_profile"
            app:destination="@id/profile">

            <argument
                android:name="profileId"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="transitionName"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/tab_calendar"
        android:name="com.petapp.capybara.calendar.CalendarFragment"
        tools:layout="@layout/fragment_calendar">
        <action
            android:id="@+id/to_survey"
            app:destination="@id/nav_graph_survey">

            <argument
                android:name="surveyId"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="typeId"
                app:argType="string"
                app:nullable="true" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/tab_types"
        android:name="com.petapp.capybara.types.TypesFragment"
        android:label="types"
        tools:layout="@layout/fragment_types">

        <action
            android:id="@+id/to_type"
            app:destination="@id/type">

            <argument
                android:name="typeId"
                app:argType="string"
                app:nullable="true" />

        </action>

        <action
            android:id="@+id/to_surveys"
            app:destination="@id/surveys">

            <argument
                android:name="typeId"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/surveys"
        android:name="com.petapp.capybara.surveys.SurveysFragment"
        android:label="surveys"
        tools:layout="@layout/fragment_surveys">

        <argument
            android:name="typeId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/to_survey"
            app:destination="@id/nav_graph_survey">

            <argument
                android:name="surveyId"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="typeId"
                app:argType="string"
                app:nullable="true" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.petapp.capybara.profile.ProfileFragment"
        android:label="profile">

        <argument
            android:name="profileId"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="transitionName"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/type"
        android:name="com.petapp.capybara.type.TypeFragment"
        android:label="type"
        tools:layout="@layout/fragment_type">

        <argument
            android:name="typeId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <include app:graph="@navigation/nav_graph_survey" />

</navigation>