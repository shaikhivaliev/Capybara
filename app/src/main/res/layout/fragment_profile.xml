<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.petapp.capybara.view.ProfileCustomView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo"
        tools:text="Name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_add_photo"
        app:iconGravity="textEnd"
        app:layout_constraintEnd_toStartOf="@id/delete_profile"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edit_photo"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/light_gray"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintTop_toBottomOf="@id/edit_photo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:hint="@string/profile_name_hint"
            android:inputType="text"
            android:paddingStart="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="RtlSymmetry" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/color_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:chipSpacingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_layout"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/white"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:checked="true"
            app:chipBackgroundColor="@android:color/white"
            app:chipIcon="@drawable/ic_done" />

        <com.google.android.material.chip.Chip
            android:id="@+id/green"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/green"
            app:chipIcon="@drawable/ic_done" />

        <com.google.android.material.chip.Chip
            android:id="@+id/red"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/red"
            app:chipIcon="@drawable/ic_done" />

        <com.google.android.material.chip.Chip
            android:id="@+id/blue"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/blue"
            app:chipIcon="@drawable/ic_done" />

        <com.google.android.material.chip.Chip
            android:id="@+id/yellow"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/yellow"
            app:chipIcon="@drawable/ic_done" />

        <com.google.android.material.chip.Chip
            android:id="@+id/violet"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/violet"
            app:chipIcon="@drawable/ic_done" />

    </com.google.android.material.chip.ChipGroup>

    <com.petapp.capybara.view.AddToDoneMorphView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>