<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_m"
    >

    <ImageView
        android:id="@+id/ic_capybara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/auth_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_capybara"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/auth_phone"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:gravity="start|center_vertical"
        android:text="@string/auth_phone"
        android:textColor="@color/main_black"
        app:icon="@drawable/ic_phone"
        app:iconGravity="start"
        app:iconPadding="@dimen/margin_m"
        app:iconTintMode="multiply"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/auth_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_capybara"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/auth_mail"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:gravity="start|center_vertical"
        android:text="@string/auth_mail"
        android:textColor="@color/main_black"
        app:icon="@drawable/ic_mail"
        android:textSize="16sp"
        app:iconGravity="start"
        app:iconPadding="@dimen/margin_m"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_phone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
